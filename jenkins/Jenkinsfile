pipeline {
    agent: any
    
    stages {
        stage('Prettier') {
            steps {
                sh 'corepack enable'
                sh 'corepack prepare pnpm@latest-8 --activate'
                sh 'pnpm install'
                sh 'pnpm run prettier:check'
            }
        }
        stage('ESLint') {
            steps {
                sh 'corepack enable'
                sh 'corepack prepare pnpm@latest-8 --activate'
                sh 'pnpm install'
                sh 'pnpm run lint'
            }
        }
        stage('Build') {
            steps {
                sh 'corepack enable'
                sh 'corepack prepare pnpm@latest-8 --activate'
                sh 'pnpm install'
                sh 'pnpm run build'
            }
        }
    }
}
